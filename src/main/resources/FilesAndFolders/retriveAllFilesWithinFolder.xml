<template name="retriveAllFilesWithinFolder" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="folderPath" description="Path of folder to retrive all files within that folder."/>
    <sequence>
        <property name="uri.var.folderPath" expression="$func:folderPath"/>
        <property action="remove" name="Accept-Encoding" scope="transport"/>
        <filter source="$ctx:sharepointBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="get"
                              uri-template="{uri.var.apiUrl}/_api/web/GetFolderByServerRelativeUrl('{uri.var.folderPath}')/Files"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="get"
                              uri-template="{uri.var.apiUrl}/_api/web/GetFolderByServerRelativeUrl('{uri.var.folderPath}')/Files"/>
                    </endpoint>
                </call>
            </else>
        </filter>
        <!-- Remove custom Headers from the API Response -->
        <header name="X-Frame-Options" action="remove" scope="transport"/>
        <header name="Strict-Transport-Security" action="remove" scope="transport"/>
        <header name="RequestId" action="remove" scope="transport"/>
        <header name="X-Content-Type-Options" action="remove" scope="transport"/>
        <header name="OData-Version" action="remove" scope="transport"/>
        <header name="Cache-Control" action="remove" scope="transport"/>
    </sequence>
</template>