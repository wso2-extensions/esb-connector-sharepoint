<template xmlns="http://ws.apache.org/ns/synapse" name="uploadFile">
    <parameter name="siteId" description="The unique identifier of the site."/>
    <parameter name="parentItemId" description="The ID of the parent folder. Use 'root' for the root directory."/>
    <parameter name="fileName" description="The name of the file."/>
    <sequence>
        <class name="org.wso2.carbon.sharepoint.connector.RestURLBuilder">
            <property name="operationPath" value="/sites/{siteId}/drive/items/{parentItemId}:/{fileName}:/content"/>
            <property name="pathParameters" value="siteId,parentItemId,fileName"/>
        </class>
        <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
        <property name="messageType" value="application/octet-stream" scope="axis2"/>
        <property name="Content-Type" value="application/octet-stream" scope="axis2" type="STRING"/>
        <header name="Accept" value="application/json" scope="transport" action="set"/>
        <header name="Authorization" expression="get-property('_ACCESS_TOKEN_')" scope="transport"/>
        <send>
            <endpoint>
                <http method="PUT" uri-template="{uri.var.base}{+uri.var.urlPath}{+uri.var.urlQuery}"/>
            </endpoint>
        </send>

        <!-- Remove unnecessary headers from the response -->
        <header name="request-id" scope="transport" action="remove"/>
        <header name="x-xss-protection" scope="transport" action="remove"/>
        <header name="vary" scope="transport" action="remove"/>
        <header name="alt-svc" scope="transport" action="remove"/>
        <header name="server" scope="transport" action="remove"/>
        <header name="access-control-allow-origin" scope="transport" action="remove"/>
        <header name="access-control-allow-methods" scope="transport" action="remove"/>
        <header name="x-content-type-options" scope="transport" action="remove"/>
        <header name="access-control-allow-headers" scope="transport" action="remove"/>
        <header name="x-frame-options" scope="transport" action="remove"/>
        <header name="cache-control" scope="transport" action="remove"/>
    </sequence>
</template>
